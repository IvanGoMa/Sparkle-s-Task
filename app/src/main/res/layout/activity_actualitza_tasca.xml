<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActualitzaTasca">

    <TextView
        android:id="@+id/tvModifica_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titolActualitza"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/round_pink"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardModifica"
        android:textColor="@color/white"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardModifica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvModifica_title">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp">


                <TextView
                    android:id="@+id/modificaNom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/modificaNom"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/etNom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:autofillHints="@string/nomTasca"
                    android:hint="@string/nomTasca"
                    android:inputType="text"
                    android:textColorHint="@color/black"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:id="@+id/modificaSparks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/modificaSparks"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/etSparks"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:autofillHints="@string/modificaSparks"
                    android:hint="@string/sparksObtinguts"
                    android:inputType="number"
                    android:textColorHint="@color/black"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:id="@+id/modificaData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/modificaData"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/etData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:autofillHints="@string/modificaData"
                    android:hint="@string/datePlaceholder"
                    android:inputType="date"
                    android:textColorHint="@color/black"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>
            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:id="@+id/llButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/cardModifica"

        >

        <Button
            android:id="@+id/btnCancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/circle_pink"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/pinkPrimary"
            android:text="@string/cancel"
            android:textColor="@color/pinkOnPrimary"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btnSave"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/circle_pink"
            android:backgroundTint="@color/pinkSecondary"
            android:text="@string/creaTasca"
            android:textColor="@color/pinkOnSecondary"
            android:textSize="20sp"/>

    </LinearLayout>
    <Button
        android:id="@+id/btnDelete"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/llButtons"
        app:layout_constraintStart_toStartOf="@id/llButtons"
        app:layout_constraintEnd_toEndOf="@id/llButtons"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/circle_pink"
        android:backgroundTint="@color/pinkError"
        android:text="@string/eliminaTasca"
        android:textColor="@color/pinkOnSecondary"
        android:textSize="20sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>