<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_sparkle">

    <ImageView
        android:id="@+id/ivHelp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/perfilGetHelp"
        android:src="@drawable/baseline_help_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/llKoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/descMoneda"
            android:src="@drawable/moneda_sparks" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:text="@string/sparksTotals"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCalendari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="start"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvCalendari_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_pink_sec"
            android:text="@string/calendari"
            android:textColor="@color/pinkOnPrimary"
            android:textSize="22sp" />

        <CalendarView
            android:id="@+id/cvCalendari"
            android:layout_width="wrap_content"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_pink"
            android:dateTextAppearance="@style/CalendarTextWhite"
            android:maxDate=""
            android:minDate=""
            android:weekDayTextAppearance="@style/CalendarTextWhite" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llTaskas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="20dp"
        android:backgroundTint="@color/pinkPrimaryVariant"
        app:layout_constraintTop_toBottomOf="@id/llCalendari"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
       >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvTasques"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_pink_sec"
                android:text="@string/tasques"
                android:textColor="@color/pinkOnPrimary"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btMostrarTot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTasques"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvTasques"
            app:layout_constraintBottom_toTopOf="@id/btnAfegir"
            />

        <Button
            android:id="@+id/btnAfegir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/pinkSecondary"
            android:text="@string/addTask"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>