<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/fondo_sparkle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:padding="20dp"
    >

    <TextView
        android:id="@+id/tvApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:fontFamily="@font/alice"
        android:textSize="70sp"
        android:textAllCaps="true"
        android:textColor="@color/orange"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_register_round"
        android:text="@string/reg"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tvApp" />

        <TextView
            android:id="@+id/tvIntr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRegister"
            android:gravity="center_horizontal"
            android:text="@string/instrx"
            android:textSize="20sp"
            android:textColor="@color/orange"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvIntr"
        >

        <EditText
            android:id="@+id/etUser"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="@string/user"

            />

        <EditText
            android:id="@+id/etPssw"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/etUser"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            android:hint="@string/pw"
            />

    <EditText
        android:id="@+id/etPsswX"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etPssw"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:hint="@string/pw"
        />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/etPsswX"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            android:hint="@string/email"
            />

    <EditText
        android:id="@+id/etHB"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:hint="@string/user"
        />

        <Button
            android:id="@+id/btnInici"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/orange"
            android:text="@string/reg"
            app:layout_constraintTop_toBottomOf="@id/etHB"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="22sp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
