<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_sparkle"
    android:padding="30dp"
    android:fontFamily="@font/alice"
    tools:context=".Inici">


    <TextView
        android:id="@+id/tvApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textSize="60sp"
        android:textColor="@color/pinkPrimary"
        android:fontFamily="@font/alice"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvApp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvApp"
            android:background="@drawable/round_pink_sec"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            android:text="@string/enter"
            android:textSize="34sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="@string/logo"
            android:src="@drawable/perfil_sin_fondo"
            android:layout_marginTop="40dp"
            android:scaleType="centerCrop"
            />

        <EditText
            android:id="@+id/etUser"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:hint="@string/user"
            android:importantForAutofill="no"
            android:inputType="text"
            />

        <EditText
            android:id="@+id/etPssw"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/pw"
            android:importantForAutofill="no"
            android:inputType="textVisiblePassword"/>

        <Button
            android:id="@+id/btnInici"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/pinkPrimary"
            android:text="@string/enter"
            android:textSize="22sp"
            />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/pinkSecondary"
            android:text="@string/reg"
            android:textSize="15sp"
            />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>