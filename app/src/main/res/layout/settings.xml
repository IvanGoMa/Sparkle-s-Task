<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_sparkle"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivPerfil"
        android:layout_width="100sp"
        android:layout_height="100sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30sp"
        android:layout_marginTop="40sp"
        android:src=""
        />
    <LinearLayout
        android:id="@+id/flFrameSparks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layoutDirection="ltr"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000"
            android:textSize="20sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src=""
            />

    </LinearLayout>
    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ivPerfil"
        app:layout_constraintTop_toBottomOf="@id/flFrameSparks"
        android:textSize="20sp"
        android:text="Nombre de usuario"
        android:layout_marginStart="15sp"
        android:layout_marginTop="40sp"
        />
    <EditText
        android:id="@+id/etUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ivPerfil"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30sp"
        android:layout_marginTop="50sp"
        android:textSize="18sp"
        android:text="Canvia el teu nom d'usuari"
        />
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etUsername"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30sp"
        android:layout_marginTop="30sp"
        android:textSize="18sp"
        android:text="Canvia el teu nom d'usuari"
        />
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30sp"
        android:layout_marginTop="30sp"
        android:textSize="18sp"
        android:text="Canvia el teu nom d'usuari"
        />
    <Switch
        android:id="@+id/swMode"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="200sp"
        android:layout_height="10sp"
        android:text="Mode nit/ Mode dia"
        android:layout_marginStart="30sp"
        android:layout_marginTop="30sp"


        />
    <Button
        android:id="@+id/btnSortir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanca sessiÃ³"
        android:textSize="16sp"
        android:layout_marginHorizontal="100sp"
        android:layout_marginBottom="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/orange"
        />




</androidx.constraintlayout.widget.ConstraintLayout>